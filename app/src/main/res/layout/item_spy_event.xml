<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorSurfaceVariant"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_device_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_smart_toy_24"
                    app:tint="?attr/colorOnPrimaryContainer"
                    android:contentDescription="@null" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Spy Detector X1" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceLabelMedium"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Generic Spy Maker" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceLabelSmall"
                android:textColor="?attr/colorOutline"
                tools:text="12:45 PM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Found via name matching" />

            <LinearLayout
                android:id="@+id/layout_rssi_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_icon_circle"
                android:backgroundTint="?attr/colorSurfaceContainerHigh"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_signal_cellular_alt_24"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/chip_rssi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textAppearance="?textAppearanceLabelSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="-65 dBm" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_detailed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_device_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceLabelSmall"
                android:textColor="?attr/colorTertiary"
                android:textStyle="bold"
                tools:text="TYPE: BLUETOOTH LE" />

            <TextView
                android:id="@+id/tv_matched_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Possible: Tracker, Audio Device" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?textAppearanceLabelSmall"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/bg_icon_circle"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="3 hits" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
