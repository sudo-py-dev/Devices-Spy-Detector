<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ════════════════════════════════════════════════════════════════
         M3 Light Theme – SpyDetector
         Color roles reference @color/md_theme_light_* tokens defined
         in colors.xml. On Android 12+ DynamicColors overrides all of
         these at runtime with the user's wallpaper-derived palette.
         ════════════════════════════════════════════════════════════════ -->
    <style name="Theme.SpyDetector" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ── Primary ──────────────────────────────────────────────── -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <!-- Aesthetic improvements -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- ── Secondary ────────────────────────────────────────────── -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- ── Tertiary ──────────────────────────────────────────────── -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- ── Error ────────────────────────────────────────────────── -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- ── Background / Surface ─────────────────────────────────── -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceContainerLowest">@color/md_theme_light_surfaceContainerLowest</item>
        <item name="colorSurfaceContainerLow">@color/md_theme_light_surfaceContainerLow</item>
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/md_theme_light_surfaceContainerHighest</item>

        <!-- ── Outline ───────────────────────────────────────────────── -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- ── Inverse ───────────────────────────────────────────────── -->
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- ── M3 Shape Tokens ───────────────────────────────────────── -->
        <!-- Extra Small  = 4dp – used by snackbars, chips                -->
        <!-- Small        = 8dp – badges, icon containers                 -->
        <!-- Medium       = 12dp – cards, text fields                     -->
        <!-- Large        = 16dp – navigation drawer items                -->
        <!-- Extra Large  = 28dp – dialogs, bottom sheets, FAB            -->
        <!-- (Not overridden — M3 base theme handles these tokens)        -->

        <!-- ── Window / System Bars ─────────────────────────────────── -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- ── Splash Screen ────────────────────────────────────────── -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/md_theme_light_primaryContainer</item>

    </style>

    <!-- ════════════════════════════════════════════════════════════════
         M3 Shape Styles – referenced by components via theme attributes.
         The base M3 theme already wires shapeAppearance* tokens to these.
         ════════════════════════════════════════════════════════════════ -->
    <style name="ShapeAppearance.SpyDetector.ExtraSmall" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.SpyDetector.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.SpyDetector.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.SpyDetector.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SpyDetector.ExtraLarge" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">28dp</item>
    </style>

    <!-- ════════════════════════════════════════════════════════════════
         Material Alert Dialog – M3 spec (28dp corners)
         ════════════════════════════════════════════════════════════════ -->
    <style name="Dialog.SpyDetector" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.SpyDetector.ExtraLarge</item>
    </style>

    <!-- ════════════════════════════════════════════════════════════════
         Snackbar – M3 spec (4dp corners, inverse-surface)
         ════════════════════════════════════════════════════════════════ -->
    <style name="Widget.SpyDetector.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="shapeAppearance">@style/ShapeAppearance.SpyDetector.ExtraSmall</item>
    </style>

</resources>
